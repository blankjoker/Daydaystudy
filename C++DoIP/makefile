WORKDIR = `pwd`

CC = gcc
CXX = g++
AR = ar
LD = g++
WINDRES = windres

INC = 
CFLAGS = -Wall
RESINC = 
LIBDIR = 
LIB = 
LDFLAGS = 

INC_DEBUG = $(INC)
CFLAGS_DEBUG = $(CFLAGS) -g -fvisibility=hidden -fPIC
RESINC_DEBUG = $(RESINC)
RCFLAGS_DEBUG = $(RCFLAGS)
LIBDIR_DEBUG = $(LIBDIR)
LIB_DEBUG = $(LIB)
LDFLAGS_DEBUG = $(LDFLAGS) -lpthread
OBJDIR_DEBUG = obj/Debug
DEP_DEBUG = 
OUT_DEBUG_PATH = bin/Debug
OUT_DEBUG_CLIENT = $(OUT_DEBUG_PATH)/libmelib.so

INC_RELEASE = $(INC)
CFLAGS_RELEASE = $(CFLAGS) -O2 -fvisibility=hidden -fPIC
RESINC_RELEASE = $(RESINC)
RCFLAGS_RELEASE = $(RCFLAGS)
LIBDIR_RELEASE = $(LIBDIR)
LIB_RELEASE = $(LIB)
LDFLAGS_RELEASE = $(LDFLAGS) -s -lpthread
OBJDIR_RELEASE = obj/Release
DEP_RELEASE = 
OUT_RELEASE_PATH = bin/Release
OUT_RELEASE_CLIENT = $(OUT_RELEASE_PATH)/libmelib.so

OBJ_DEBUG_CLIENT = $(OBJDIR_DEBUG)/me_thread.o \
				   $(OBJDIR_DEBUG)/me_socket.o \
				   $(OBJDIR_DEBUG)/me_util.o \

OBJ_RELEASE_CLIENT = $(OBJDIR_RELEASE)/me_thread.o \
				     $(OBJDIR_RELEASE)/me_socket.o \
				     $(OBJDIR_RELEASE)/me_util.o \

all: debug release

clean: clean_debug clean_release

before_debug: 
	test -d $(OUT_DEBUG_PATH) || mkdir -p $(OUT_DEBUG_PATH)
	test -d $(OBJDIR_DEBUG) || mkdir -p $(OBJDIR_DEBUG)

after_debug: 

debug: before_debug out_debug_client after_debug

out_debug_client: before_debug $(OBJ_DEBUG_CLIENT) $(DEP_DEBUG)
	$(LD) -shared $(LIBDIR_DEBUG) $(OBJ_DEBUG_CLIENT)  -o $(OUT_DEBUG_CLIENT) $(LDFLAGS_DEBUG) $(LIB_DEBUG)

$(OBJDIR_DEBUG)/me_thread.o: me_thread.cpp
	$(CXX) $(CFLAGS_DEBUG) $(INC_DEBUG) -c me_thread.cpp -o $(OBJDIR_DEBUG)/me_thread.o

$(OBJDIR_DEBUG)/me_util.o: me_util.cpp
	$(CXX) $(CFLAGS_DEBUG) $(INC_DEBUG) -c me_util.cpp -o $(OBJDIR_DEBUG)/me_util.o

$(OBJDIR_DEBUG)/me_socket.o: me_socket.cpp
	$(CXX) $(CFLAGS_DEBUG) $(INC_DEBUG) -c me_socket.cpp -o $(OBJDIR_DEBUG)/me_socket.o

clean_debug: 
	rm -rf $(OUT_DEBUG_PATH)
	rm -rf $(OBJDIR_DEBUG)

before_release: 
	test -d $(OUT_RELEASE_PATH) || mkdir -p $(OUT_RELEASE_PATH)
	test -d $(OBJDIR_RELEASE) || mkdir -p $(OBJDIR_RELEASE)

after_release: 

release: before_release out_release_client after_release

out_release_client: before_release $(OBJ_RELEASE_CLIENT) $(DEP_RELEASE)
	$(LD) -shared $(LIBDIR_RELEASE) $(OBJ_RELEASE_CLIENT)  -o $(OUT_RELEASE_CLIENT) $(LDFLAGS_RELEASE) $(LIB_RELEASE)

$(OBJDIR_RELEASE)/me_thread.o: me_thread.cpp
	$(CXX) $(CFLAGS_RELEASE) $(INC_RELEASE) -c me_thread.cpp -o $(OBJDIR_RELEASE)/me_thread.o

$(OBJDIR_RELEASE)/me_util.o: me_util.cpp
	$(CXX) $(CFLAGS_RELEASE) $(INC_RELEASE) -c me_util.cpp -o $(OBJDIR_RELEASE)/me_util.o

$(OBJDIR_RELEASE)/me_socket.o: me_socket.cpp
	$(CXX) $(CFLAGS_RELEASE) $(INC_RELEASE) -c me_socket.cpp -o $(OBJDIR_RELEASE)/me_socket.o

clean_release: 
	rm -rf $(OUT_RELEASE_PATH)
	rm -rf $(OBJDIR_RELEASE)

.PHONY: before_debug after_debug clean_debug before_release after_release clean_release

